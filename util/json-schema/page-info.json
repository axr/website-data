{
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"type": {
			"type": "string",
			"enum": ["page", "blog-post"],
			"required": true
		},
		"title": {
			"type": "string",
			"required": true
		},
		"file": {
			"type": "string"
		},

		"date": {
			"type": "string",
			"pattern": "^\\d{4}-\\d{2}-\\d{2}$"
		},
		"author_name": {
			"type": "string"
		},
		"authors": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"summary_file": {
			"type": "string"
		},
		"generate_toc": {
			"type": "boolean"
		}
	}
}
