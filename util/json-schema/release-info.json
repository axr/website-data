{
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"package": {
			"type": "string",
			"required": true
		},
		"version": {
			"type": "string",
			"pattern": "^\\d+(\\.\\d+){0,3}$",
			"required": true
		},
		"core_version": {
			"type": "string",
			"pattern": "^\\d+(\\.\\d+){0,3}$"
		},
		"files": {
			"type": "array",
			"required": true,
			"items": {
				"type": "object",
				"additionalProperties": true,
				"properties": {
					"os": {
						"type": "string",
						"enum": ["osx", "linux", "windows", "src"],
						"required": true
					},
					"arch": {
						"type": "string",
						"enum": ["x86_64", "i386", "intel", "none"],
						"required": true
					},
					"type": {
						"type": "string",
						"enum": ["msi", "exe", "dmg", "deb", "rpm", "tar.gz"],
						"required": true
					},
					"filename": {
						"type": "string",
						"required": true
					},
					"url": {
						"type": "string",
						"pattern": "^\\w+:\/\/",
						"required": true
					},
					"size": {
						"type": "integer",
						"required": true
					},
					"os_version_min": {
						"type": "string",
						"pattern": "^\\d+(\\.\\d+){0,3}$"
					},
					"os_version_max": {
						"type": "string",
						"pattern": "^\\d+(\\.\\d+){0,3}$"
					},
					"checksums": {
						"type": "object",
						"additionalProperties": false,
						"properties": {
							"md5": {
								"type": "string",
								"pattern": "^[0-9a-f]{32}$"
							},
							"sha1": {
								"type": "string",
								"pattern": "^[0-9a-f]{40}$"
							}
						}
					}
				}
			}
		}
	}
}
